@model CMS.Admin.Models.LayoutModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="pull-right">
                <a class="btn btn-success btn-circle" href="/Page/Add"><i class="fa fa-plus"></i> Ekle</a>
            </div>
        </div>

        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Sayfalar</span>
                </div>

                <div class="tools"> </div>

            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead>
                    <tr>
                        <th> # </th>
                        <th> Sayfa Adı </th>
                        <th> Bağlı Layout </th>
                        <th> İşlemler </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var PageBilgiler in Model.Pages)
                    {
                        <tr>
                            <td>
                                @PageBilgiler.Id
                            </td>
                            <td>
                                @PageBilgiler.Layout.Name
                            </td>
                            <td>@PageBilgiler.Name </td>
                            <td>
                                <a class="btn btn-primary btn-circle" href="/Page/Update?layoutName=@PageBilgiler.Name">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-circle" href="/Page/Delete?layoutName=@PageBilgiler.Name">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->